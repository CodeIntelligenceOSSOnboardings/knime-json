<?xml version="1.0" encoding="UTF-8"?>
<knimeNode icon="./str2json.png" type="Manipulator" xmlns="http://knime.org/node/v2.8" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://knime.org/node/v2.8 http://knime.org/node/v2.8.xsd">
    <name>String to JSON</name>
    
    <shortDescription>
        Converts String values to JSON values.
    </shortDescription>
    
    <fullDescription>
        <intro>Converts the String values to JSON values.</intro>
        
        
        <option name="String column">Column containing JSON as a String</option>
        <option name="Allow comments">Comments <tt>/*</tt>...<tt>*/</tt>, and line comments <tt>//</tt> and <tt>#</tt> are allowed within JSON (the specification do not allow comments)</option>
        <option name="Fail on error">If there are errors, it should fail or generate missing values</option>
        <option name="Remove source column">When checked, the source column will be removed</option>
        <option name="New column">Name of the new (JSON) column</option>
        <!-- possibly more options that can also be grouped by tabs -->
        <!--
        <tab name="Standard Options">
            <option name="short name of first option (like in the dialog)">description of first option</option>
            <option name="short name of second option (like in the dialog)">description of second option</option>
        </tab>
        <tab name="Advanced Options">
            <option name="short name of first advanced option (like in the dialog)">description of first advanced option</option>
        </tab>
        -->
    </fullDescription>
    
    <ports>
        <inPort index="0" name="table with String">Contains a String column with JSON content</inPort>
        <!-- possibly more input ports here-->
        <outPort index="0" name="table with JSON">Table with converted JSON values</outPort>
        <!-- possibly more output ports here-->
    </ports>    
</knimeNode>
